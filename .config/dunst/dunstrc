[global]
    font = JetBrains Mono 12
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "0x3-5+5"
    shrink = no
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = none
    sticky_history = yes
    history_length = 20
    show_indicators = yes
    line_height = 0
    separator_height = 2
    padding = 20
    horizontal_padding = 20
    separator_color = auto
    startup_notification = false
    icon_position = off
    icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/
    # dmenu path.
    dmenu = dmenu -p dunst:
    # Browser for opening urls in context menu.
    browser = firefox -new-tab

[frame]
    width = 1
    color = "#212121"

[urgency_low]
    background = "#cecece"
    foreground = "#686868"
    timeout = 3

[urgency_normal]
    background = "#212121"
    foreground = "#e1e1e1"
    timeout = 5

[urgency_critical]
    background = "#d160c4"
    foreground = "#e1e1e1"
    timeout = 0

[shortcuts]
    # Close notification.
    close = ctrl+space
    # Close all notifications.
    close_all = ctrl+shift+space
    # Redisplay last message(s).
    history = ctrl+grave
    # Context menu.
    context = ctrl+shift+period

[ignore]
    appname = pasystray
    summary = "new sink*"
    format = ""

[espeak]
    appname = notify-send
    summary = "Mail"
    script = ~/bin/dunst_espeak.sh

